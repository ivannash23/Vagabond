<div class="col-md-4 col-md-4 col-md-4 col-md-4">
  <%if @user.image%>
    <%= image_tag @user.image, alt: "Profile Pic", size: "150x200"%>
  <%else%>
    <%= image_tag "http://www.eurogeosurveys.org/wp-content/uploads/2014/02/default_profile_pic.jpg", alt: "Profile Pic", size: "150x200"%>
  <%end%>  
  <p><%= @user.name%></p>
