<%= render "layouts/banner" %>

<div class="form-horizontal">
  <div class="container">
    <div class="text-center col-sm-offset-1">
      <%= image_tag @user.image, size: "200x200"%>
    </div>
    
    <%= form_for @user do |f| %>
      <div class="form-group">
        <label for="inputImage" class="col-xs-6 col-sm-6 col-dm-6 col-lg-6 control-label">Image:</label>
          <%= f.text_field :image, placeholder: "#{@user.image}" %>
      </div>
      <div class="form-group">
        <label for="inputName" class="col-xs-6 col-sm-6 col-dm-6 col-lg-6 control-label">Name:</label>
        <%= f.text_field :name, placeholder: "#{@user.name}" %>
      </div>
      <div class="form-group">
        <label for="inputCity" class="col-xs-6 col-sm-6 col-dm-6 col-lg-6 control-label">Current City:</label>
        <%= f.text_field :current_city, placeholder: "#{@user.current_city}" %>
      </div>
      <div class="form-group">
        <label for="inputEmail" class="col-xs-6 col-sm-6 col-dm-6 col-lg-6 control-label">Email:</label>
        <%= f.text_field :email, placeholder: "#{@user.email}" %>
      </div>
      <div class="form-group">
        <label for="inputPassword" class="col-xs-6 col-sm-6 col-dm-6 col-lg-6 control-label">Password:</label>
        <%= f.password_field :password, placeholder: "#{@user.password}" %>
      </div>
      <%= f.submit "Save", :class => "btn btn-default"  %>
    <% end %>
  </div>
</div>