<%= render "layouts/banner" %>

<div class="form-horizontal">
  <div class="container">
    <h4 class="text-center">Login</h4>

  	<%= form_for @user, url: "/sessions", method: "post" do |f| %>
  	  <div class="form-group">
        <label for="inputEmail3" class="col-sm-6 control-label">Email</label>
        <%= f.text_field :email, placeholder: "example@example.com" %>
  	  </div>
  	  <div class="form-group">
  	  	<label for="inputPassword3" class="col-sm-6 control-label">Password</label>
        <%= f.password_field :password, placeholder: "notgonnatellyou" %>
  	  </div>
  	  <div class="text-center">
  	  <%= f.submit "Log In" %>
  	  </div>
    <% end %>
  </div>
</div>